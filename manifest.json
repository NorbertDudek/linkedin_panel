{
  "browser_specific_settings": {
    "gecko": {
      "id": "linkedin_panel@norbertdudek.com.ar"
    }
  },
  "manifest_version": 2,
  "name": "Pinned LinkedIn",
  "version": "2.4.0",
  "description": "Go to the LinkedIn tab. If it doesn't exist, it's created.",
  "icons": {
    "48": "icons/linkedin-48.png",
    "64": "icons/linkedin-64.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/linkedin-32.png"
    },
    "default_title": "Pinned LinkedIn",
    "default_area": "navbar"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}